set hlsearch
syntax on
set cindent
set smartindent
au FileType c set makeprg=gcc\ %
au FileType cpp set makeprg=g++\ %
imap jj <Esc>
nmap ; :
nmap <C-j> <C-w><C-j>
nmap <C-k> <C-w><C-k>
nmap <C-h> <C-w><C-h>
nmap <C-l> <C-w><C-l>
set expandtab
set tabstop=8
set softtabstop=4
set shiftwidth=4
set autoindent
set number 
